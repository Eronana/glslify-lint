{
  "name": "glslify-lint",
  "version": "0.0.1",
  "description": "a transform for glslify that used to lint glsl source",
  "main": "dist/index.js",
  "scripts": {
    "test": "mocha -r ts-node/register test/**/*.ts",
    "cover": "nyc npm test",
    "lint": "tslint -p tsconfig.json",
    "build": "tsc -p tsconfig.build.json",
    "watch": "tsc -p tsconfig.build.json --watch",
    "prepare": "npm run build"
  },
  "author": "Eronana",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.9.4",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "glslify": "^6.4.0",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "chalk": "^2.4.1"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 90,
    "statements": 90,
    "functions": 90,
    "branches": 70,
    "include": [
      "src/**/*"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "all": true
  }
}
